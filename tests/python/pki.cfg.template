# based on
# https://fedorapeople.org/cgit/edewata/public_git/pki-dev.git/tree/scripts/ca.cfg
# https://fedorapeople.org/cgit/edewata/public_git/pki-dev.git/tree/scripts/kra.cfg

[DEFAULT]
pki_instance_name=%(pki_instance_name)s
pki_https_port=%(https_port)s
pki_http_port=%(http_port)s
pki_master_https_port=%(https_port)s
pki_security_domain_https_port=%(https_port)s
pki_ds_bind_dn=cn=Directory Manager
pki_ds_ldap_port=%(ldap_port)s
pki_ds_password=%(password)s
pki_backup_keys=True
pki_backup_password=%(password)s
pki_client_database_password=%(password)s
pki_client_database_purge=False
pki_client_pkcs12_password=%(password)s
pki_clone_pkcs12_password=%(password)s
pki_security_domain_name=%(security_domain)s
pki_security_domain_user=caadmin
pki_security_domain_password=%(password)s
pki_token_password=%(password)s

[CA]
pki_admin_email=caadmin@%(domain)s
pki_admin_name=caadmin
pki_admin_nickname=caadmin
pki_admin_password=%(password)s
pki_admin_uid=caadmin
pki_ds_base_dn=dc=ca,%(suffix)s
pki_ds_database=ca

[KRA]
pki_admin_cert_file=/root/.dogtag/%(pki_instance_name)s/ca_admin.cert
pki_admin_email=kraadmin@%(domain)s
pki_admin_name=kraadmin
pki_admin_nickname=kraadmin
pki_admin_password=%(password)s
pki_admin_uid=kraadmin
pki_ds_base_dn=dc=kra,%(suffix)s
pki_ds_database=kra

[OCSP]
pki_admin_cert_file=/root/.dogtag/%(pki_instance_name)s/ca_admin.cert
pki_admin_email=ocspadmin@%(domain)s
pki_admin_name=ocspadmin
pki_admin_nickname=ocspadmin
pki_admin_password=%(password)s
pki_admin_uid=ocspadmin
pki_ds_base_dn=dc=ocsp,%(suffix)s
pki_ds_database=ocsp
